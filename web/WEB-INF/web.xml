<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>loginfil</filter-name>
        <filter-class>loginfil</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>setlogincookie</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>loginfil</filter-name>
        <servlet-name>approve</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>loginfil</filter-name>
        <servlet-name>delete</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>loginfil</filter-name>
        <servlet-name>logout</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>loginfil</filter-name>
        <servlet-name>savepost</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>loginfil</filter-name>
        <url-pattern>/jsps/pending.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>loginfil</filter-name>
        <url-pattern>/jsps/home.jsp</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>contextlis</listener-class>
    </listener>
    <listener>
        <description>RequestListener</description>
        <listener-class>cookielis</listener-class>
    </listener>
    <servlet>
        <servlet-name>savepost</servlet-name>
        <servlet-class>servlets.savepost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>servlets.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlets.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>servlets.delete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>approve</servlet-name>
        <servlet-class>servlets.approve</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>savepost</servlet-name>
        <url-pattern>/savepost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>approve</servlet-name>
        <url-pattern>/approve</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
